<%= form_tag :action=>'login' %>

<h3 class="header">Client Login</h3>
<div class="section">
	<table>
		<tr>
			<td><%= label_tag 'Username' %></td> 
			<td>
				<%= text_field_tag :username, "" %>
			</td>
		</tr>
		<tr>
			<td><%= label_tag 'Password' %></td> 
			<td>
				<%= password_field_tag :password, "" %>
			</td>
		</tr>
	</table>
</div>

<div style="margin: 10px 0 0;">
	<%= content_tag :button, 'Login', :type => :submit, :class => :submit_button %>
	<%= link_to 'Signup', :action => 'signup' %> |
    <%= link_to 'Forgot my password', :action => 'forgot_password' %>
</div>    
